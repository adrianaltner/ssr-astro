---
import HeaderLink from "./HeaderLink.astro";
---

<header>
  <nav>
    <h2><a href="/">Adrian Altner</a></h2>
    <div class="internal-links">
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
	padding-top: .5em;
    background:  white;
    position: sticky;
    top: 0;
    z-index: 100;
  }
  h2 {
    margin: 0;
    font-size: 1.2em;
    font-weight: 700;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  

  nav {
    width: 960px;
    max-width: calc(100% - 2em);
    margin: auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .internal-links {
    display: flex;
    gap: 1em;
  }
  
  nav a {
    padding: 0.6em 1em;
    color: rgb(var(--gray-dark));
    text-decoration: none;
    border-radius: 6px;
    font-weight: 500;
    transition: all 0.2s ease;
    position: relative;
  }

</style>
