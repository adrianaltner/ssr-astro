---
import HeaderLink from "./HeaderLink.astro";
---

<header>
  <nav>
    <h2><a href="/">Adrian Altner</a></h2>
    <div class="internal-links">
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <a href="/playground" class="button">Playground</a>
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding-top: 0.5em;
    background: white;
    position: sticky;
    top: 0;
    z-index: 100;
  }
  h2 {
    margin: 0;
    font-size: 1.2em;
    font-weight: 700;
  }

  h2 a,
  h2 a.active {
	color: black;
    text-decoration: none;
  }

  nav {
    width: 960px;
    max-width: calc(100% - 2em);
    margin: auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .internal-links {
    display: flex;
    gap: .5em;
  }

  nav a {
    padding: 0.6em 1em;
    text-decoration: none;
    border-radius: 6px;
    font-weight: 500;
    transition: all 0.2s ease;
    position: relative;
  }
  .button {
    display: inline-block;
    background-color: #c55c5c;
    color: white;
    text-align: center;
    text-decoration: none;
    border-radius: 4px;
    font-weight: bold;
    transition: background-color 0.3s;
  }
  .button:hover {
    background-color: #d47474;
  }
</style>
