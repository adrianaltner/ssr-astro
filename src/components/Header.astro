---
import HeaderLink from "./HeaderLink.astro";
---

<header id="site-header">
  <nav>
    <h2><a href="/">Adrian Altner</a></h2>
    <div class="internal-links">
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </div>
  </nav>
</header>


<style>
  header {
    margin: 0;
    padding-top: 0.5em;
    background: white;
    position: sticky;
    top: 0;
    z-index: 100;
    box-shadow: none;
    transition: box-shadow 0.7s linear;
  }
  
  header.scrolled {
    box-shadow: 0 0 0 1px #d5a369;
  }
  
  /* Transparent header state - can be applied when at specific routes if needed */
  header.transparent {
    box-shadow: none;
    background: transparent;
  }
  h2 {
    margin: 0;
    font-size: 1.2em;
    font-weight: 700;
  }

  h2 a,
  h2 a.active {
	color: black;
    text-decoration: none;
  }

  nav {
    width: 960px;
    max-width: calc(100% - 2em);
    margin: auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .internal-links {
    display: flex;
    gap: .5em;
  }

  nav a {
    padding: 0.6em 1em;
    text-decoration: none;
    border-radius: 6px;
    font-weight: 500;
    transition: all 0.2s ease;
    position: relative;
  }

</style>

<script>
  // Add scroll event to control header shadow
  document.addEventListener('DOMContentLoaded', () => {
    const header = document.getElementById('site-header');
    
    // Detect if we're on a page that should have a transparent header initially
    // const isTransparentPage = window.location.pathname === '/' || window.location.pathname.includes('/some-specific-page');
    // if (isTransparentPage && header) {
    //   header.classList.add('transparent');
    // }
    
    const toggleHeaderShadow = () => {
      if (header) {
        if (window.scrollY > 10) {
          header.classList.add('scrolled');
        } else {
          header.classList.remove('scrolled');
        }
      }
    };
    
    // Initial check
    toggleHeaderShadow();
    
    // Add scroll event listener
    window.addEventListener('scroll', toggleHeaderShadow);
  });
</script>